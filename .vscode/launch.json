{
  "version": "0.2.0",
  "configurations": [

  
    {
      "type": "node-terminal",
      "name": "Debug Current JS File (node)",
      "request": "launch",
      "command": "node -- ${fileBasenameNoExtension}",
      "cwd": "${fileDirname}"
    },
    {
      "type": "node-terminal",
      "name": "Debug Current TS File (ts-node)",
      "request": "launch",
      "command": "ts-node -- ${fileBasenameNoExtension}",
      "cwd": "${fileDirname}",
      "sourceMaps": true, 
    },
    {
      "type": "node-terminal",
      "name": "server http",
      "request": "launch",
      "command": "ts-node -- ${workspaceFolder}/src/index.ts",
      "cwd": "${fileDirname}",
      "sourceMaps": true, 
      "envFile": "${workspaceFolder}/.env"
    },
    {
      "type": "node-terminal",
      "name": "Debug Current Test File (npm run test)",
      "request": "launch",
      "command": "npm run test -- ${fileBasenameNoExtension}",
      "cwd": "${fileDirname}"
    }
  ]
}
